<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, placeholder: t("users.new.name"), class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :email, class: "sr-only"%>
    <%= f.text_field :email, placeholder: "Email", class: "form-email form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, placeholder: t("users.new.password"), class: "form-password form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, placeholder: t("users.new.confirmation"), class: "form-password form-control" %>
  </div>

  <div class="actions btn">
    <%= f.submit yield :button_text %>
  </div>
<% end %>

<% provide :title, t(".login") %>
<h1><%= t(".login") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :user, url: login_path do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "sr-only" %>
        <%= f.text_field :email, placeholder: "Email", class: "form-email form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, placeholder: t("users.new.password"), class: "form-password form-control" %>
      </div>
      <div class="actions btn">
        <%= f.submit t("sessions.new.login") %>
      </div>
    <% end %>

    <p> <%= t(".new_user") %> <%= link_to t(".signup_now"), signup_path %></p>
  </div>
</div>

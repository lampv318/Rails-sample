<% provide :title, current_user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for current_user %>
        <%= current_user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if current_user.posts.any? %>
      <h3>posts <%= current_user.posts.count %></h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= paginate @posts %>
    <% end %>
  </div>
</div>

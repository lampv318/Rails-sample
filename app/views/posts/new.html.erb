<%= provide :title, t(".title") %>
<h1><%= t(".title") %></h1>

<%= form_for @post, url: user_posts_path do |f| %>
  
  <div class="field">
    <%= f.label :content , t(".content")%>
    <%= f.text_area :content %>
  </div>

  <ul>
    <h2><%= t(".images") %></h2>

    <%= f.fields_for :images do |image| %>
      <%= render "image_fields", f: image %> 
    <% end %>

    <div class="links">
      <%= link_to_add_association t(".add_image"), f, :images %>
    </div>
  </ul>

  <div class="actions">
    <%= f.submit t(".create")  %>
  </div>
<% end %>
